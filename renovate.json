{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": ["at any time"],
  "packageRules": [
    {
      "description": "Pin dependencies to exact versions",
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "pin"
    },
    {
      "description": "Delay updates by 1 day to allow testing",
      "matchPackagePatterns": ["*"],
      "schedule": ["at any time"],
      "prCreation": "not-pending",
      "minimumReleaseAge": "1 day"
    }
  ],
  "regexManagers": [
    {
      "description": "Bump pinned versions in HA manifest requirements",
      "fileMatch": [
        "^custom_components/escpos_printer/manifest\\.json$"
      ],
      "matchStrings": [
        "\"(?<depName>[A-Za-z0-9_.-]+)\s*==\s*(?<currentValue>[A-Za-z0-9_.+-]+)\""
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "pep440"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "postUpgradeTasks": {
    "commands": [
      "python scripts/sync_manifest_requirements.py"
    ],
    "fileFilters": [
      "pyproject.toml",
      "uv.lock"
    ],
    "executionMode": "update"
  }
}
